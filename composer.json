{
    "name": "xlited/lamx",
    "description": "Build apps in Laravel + htmx",
    "keywords": [
        "xlited",
        "lamx"
    ],
    "homepage": "https://github.com/xlited/lamx",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ion Caliman",
            "email": "xlite.dev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Xlited\\Lamx\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xlited\\Lamx\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Xlited\\Lamx\\LamxServiceProvider"
            ],
            "aliases": {
                "Lamx": "Xlited\\Lamx\\LamxFacade"
            }
        }
    }
}
